# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
#[*]
#indent_style = tab
#indent_size = 2

# Tab indentation (no size specified)
[*.php]
indent_style = tab

# Tab indentation (no size specified)
[*.js]
indent_style = tab

# Tab indentation (no size specified)
[*.less]
indent_style = tab

# Matches the exact files either package.json
[{package.json}]
indent_style = space
indent_size = 2
